<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Combustível"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo Gasto (horas):" />

    <EditText
        android:id="@+id/edTempoGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o tempo gasto"
        android:inputType="numberDecimal"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velocidade Média (km/h):"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/edVelocidadeMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a velocidade média"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Média de Consumo (litros por km):"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/edMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Digite a média de consumo" />

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Litros usados:"
        android:textSize="18sp"
        android:paddingTop="16dp" />

</LinearLayout>

